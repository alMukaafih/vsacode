{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "allowJs": false,
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "downlevelIteration": true,
        "strict": false,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strictNullChecks": false
    },
    "include": [
        "./src", "./tests"
    ],
    "typedocOptions": {
        "entryPoints": ["src/vsacode.ts", "src/**/*"],
        "out": "docs"
    }
}
