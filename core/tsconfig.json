{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "allowJs": true,
        "removeComments": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "downlevelIteration": true,
        "strict": true,
        "declaration": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["./src", "./typings"]
}
